<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MenuFragment">


    <LinearLayout
        android:layout_width="306dp"
        android:layout_height="543dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btnIkasleen_datuak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ikasleen_datuak" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="46dp" />
        <Button
            android:id="@+id/btnBilerak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bilerak" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="46dp" />
        <Button
            android:id="@+id/btnNire_ordutegia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nire_ordutegiak" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="46dp" />
        <Button
            android:id="@+id/btnIkasleen_ordutegiak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ikaselen_ordutegiak" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>