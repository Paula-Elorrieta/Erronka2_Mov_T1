<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SortuBilerakFragment">

    <LinearLayout
        android:layout_width="396dp"
        android:layout_height="809dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="75dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aukeratu norekin:"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinnerNorekin"
            android:layout_width="match_parent"
            android:layout_height="55dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="35dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aukeratu zentroa:"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinnerZentroa"
            android:layout_width="match_parent"
            android:layout_height="55dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="35dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aukeratu gela:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextGela"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:ems="10"
            android:hint="Gela"
            android:inputType="text" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="35dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sartu tituloa:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextTitulua"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:ems="10"
            android:hint="Tituloa"
            android:inputType="text" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="35dp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sartu asuntoa:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextAsuntoa"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:ems="10"
            android:hint="Asuntua"
            android:inputType="text" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="35dp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aukeratu data:"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textViewData"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:background="@android:drawable/editbox_background"
            android:text="Data"
            android:textSize="16sp"
            android:padding="10dp"
            android:clickable="true"
            android:focusable="true"/>
        <Space
            android:layout_width="match_parent"
            android:layout_height="48dp" />

        <LinearLayout
            android:layout_width="343dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonGordeBileraSortu"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/MoradoN"
                android:text="@string/Gorde" />

            <Button
                android:id="@+id/buttonAtzeraBileraSortu"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/design_default_color_error"
                android:text="@string/atzera" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>